<% layout("/layouts/boilerplate") %>

<div class="row">
    <div class="col-8 offset-2">
        <br><br>
        <h3 style="font-weight: bold; color: #333;">Create a new list</h3>
        <form method="POST" action="/listings" novalidate class="needs-validation" style="background-color: #f7f7f7; padding: 20px; border-radius: 10px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
            <div class="mb-3">
                <label for="title" class="form-label" style="font-size: 18px; color: #666;">Title</label>
                <input name="listing[title]" placeholder="Enter title" type="text" class="form-control" required style="width: 100%; height: 40px; border-radius: 5px; padding: 10px;">
                <div class="valid-feedback" style="color: #666;">Title is good</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label" style="font-size: 18px; color: #666;">Description</label>
                <textarea name="listing[description]" class="form-control" required style="width: 100%; height: 100px; border-radius: 5px; padding: 10px;"></textarea>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label" style="font-size: 18px; color: #666;">Image</label>
                <input name="listing[image]" placeholder="Enter image URL" type="text" class="form-control" style="width: 100%; height: 40px; border-radius: 5px; padding: 10px;">
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label" style="font-size: 18px; color: #666;">Price</label>
                    <input name="listing[price]" placeholder="Enter price" type="number" class="form-control" required style="width: 100%; height: 40px; border-radius: 5px; padding: 10px;">
                    <div class="invalid-feedback" style="color: #666;">Please enter valid price</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label" style="font-size: 18px; color: #666;">Country</label>
                    <input name="listing[country]" placeholder="Enter country" type="text" class="form-control" required style="width: 100%; height: 40px; border-radius: 5px; padding: 10px;">
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label" style="font-size: 18px; color: #666;">Location</label>
                <input name="listing[location]" placeholder="Enter location" type="text" class="form-control" required style="width: 100%; height: 40px; border-radius: 5px; padding: 10px;">
            </div>
            <br><br>
            <button class="btn btn-dark add-btn" style="background-color: #333; color: #fff; border: none; border-radius: 5px; padding: 10px 20px;">Add</button>
        </form>
    </div>
</div>