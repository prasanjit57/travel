<% layout("/layouts/boilerplate") %>

<!-- Add some basic styling to the page -->
<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f7f7f7; /* light beige background */
  }

  h3 {
    color: #008000; /* green title */
  }

  .listing-link {
    text-decoration: none;
    color: #00698f; /* blue link color */
  }

  .listing-link:hover {
    color: #003366; /* darker blue link color on hover */
  }

  .listing-card {
    margin-bottom: 20px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-radius: 10px; /* rounded corners */
    background-color: #fff; /* white background */
  }

  .listing-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 10px 10px 0 0;
    transition: transform 0.3s ease-in-out; /* add transition for hover effect */
  }

  .listing-card img:hover {
    transform: scale(1.05); /* zoom in on hover */
  }

  .card-body {
    padding: 20px;
  }

  .card-text {
    font-size: 18px;
    margin-bottom: 10px;
    color: #333; /* dark gray text */
  }
</style>

<h3>
    all listings
</h3>
<!-- <form method="GET" action="/listings/new">
    <button>Create New Listing</button>
</form> -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
<% for (let listing of allListings) { %>
<a href="/listings/<%= listing._id %>" class="listing-link">
<div class="card col listing-card" >
    <img src="<%= listing.image %>" class="card-img-top" alt="listing-image" style="height: 20rem">
    <!-- <div class="card-img-overlay"> -->
    <div class="card-body">
        <p class="card-text">
            <b><%= listing.title %> <br></b>
            &#8377 <%= listing.price.toLocaleString("en-IN") %> / night
        </p>
    </div>
    <!-- </div> -->
</div>
</a>
<% } %>
</div>